---
// npm
import { Image } from 'astro:assets'

// self
import Layout from '!layouts/layout.astro'
import { price, marketplace } from "!libs/constants.js"
import bus0 from '!assets/20230614_115044-90_IMGP.jpg'
import bus1 from '!assets/20230614_120718.jpg'

const description = `Skoolie for sale ${price} in Otterburn Park: 38' 2009 Blue Bird Vision bus (immatriculated heavy vehicule, class 3 permit) being converted into an RV requiring class 5 permit to drive.`
---

<Layout description={description} url="/en/" title="Skoolie - Bus - RV - for sale">
	<main class="text-center">
		<a class="float-right italic link" href="/" hreflang="fr-ca">Fran√ßais</a>
		<h1 class="text-4xl font-bold">Skoolie <small>Bus/RV</small></h1>

		<div class="my-4 alert alert-info">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
			<span class="text-xl">{description}</span>
			<div class="join join-horizontal sm:join-vertical md:join-horizontal">
				<a href="/en/details/" class="join-item uppercase btn btn-lg btn-primary">Details</a>
				<a href="/en/rsvp/" class="join-item uppercase btn btn-lg btn-secondary">RSVP</a>
			</div>
		</div>

		<div class="lg:flex gap-4">
			<div class="flex-1">
				<h2 class="text-xl font-bold"><a class="link" href={marketplace}>Marketplace</a> ad</h2>
				<a href="/album/outside/"><Image loading="eager" class="my-4 rounded-lg" src={bus0} width={bus0.width/4} height={bus0.height/4} alt="Bus - front" /></a>
				<a class="link" href="tel:5143947877">514-394-7877</a>
			</div>
			<div class="flex-1">
				<h2 class="text-xl font-bold"><a class="link" href="https://www.kijiji.ca/v-vr-motorise/longueuil-rive-sud/skoolie-autobus-vr/1663218685">Kijiji</a> ad</h2>
				<a href="/album/inside/"><Image loading="eager" class="my-4 rounded-lg" src={bus1} width={bus1.width/4} height={bus1.height/4} alt="Bus - interior" /></a>
				<a class="link" href="mailto:bus@waglo.com">bus@waglo.com</a>
			</div>
		</div>
	</main>
</Layout>
