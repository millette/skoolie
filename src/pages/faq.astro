---
// astro
import { getEntry } from 'astro:content'

// self
import Layout from "@layouts/layout.astro"
import { price } from "@libs/constants.ts"
import halfSpace from '@libs/half-space.ts'

const entry = await getEntry('pages', 'faq-fr')

export async function getStaticPaths() {
  return [
    {
      params: {
        slug: entry.slug,
        props: {
          entry
        }
      },
    },
  ]
}


const { Content, headings } = await entry.render()
---

<Layout url="/faq/" title={`Skoolie Ã  vendre - ${headings[0].text}`}>
  <div class="prose mx-auto">
    <Content price={halfSpace(price)} />
  </div>
</Layout>
