---
// npm
import { Image } from 'astro:assets'

// self
import Layout from '!layouts/layout.astro'
import { prix, marketplace } from "!libs/constants.js"
import bus0 from '!assets/20230614_115044-90_IMGP.jpg'
import bus1 from '!assets/20230614_120718.jpg'

const description = `Skoolie à vendre ${prix} dans Otterburn Park: autobus Blue Bird Vision 2009 de 38' (plaqué véhicule lourd, classe 3) en conversion vers un VR pour le plaquer classe 5.`
---
<Layout description={description} url="/" title="Skoolie - Bus - VR - à vendre">
	<main class="text-center">
		<a class="float-right italic link" href="/en/" hreflang="en-ca">English</a>
		<h1 class="text-4xl font-bold">Skoolie <small>Bus/VR</small></h1>
		<div class="my-4 alert alert-info">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
			<span class="text-xl">{description}</span>
			<a href="/details/" class="uppercase btn btn-lg btn-primary">Détails</a>
			<a href="/rsvp/" class="uppercase btn btn-lg btn-secondary">RSVP</a>
		</div>

		<div class="lg:flex gap-4">
			<div class="flex-1">
				<h2 class="text-xl font-bold">Annonce sur <a class="link" href={marketplace}>Marketplace</a></h2>
				<a href="/album/outside/"><Image loading="eager" class="my-4 rounded-lg" src={bus0} width={bus0.width/4} height={bus0.height/4} alt="Bus - devant" /></a>
				<a class="link" href="tel:5143947877">514-394-7877</a>
			</div>
			<div class="flex-1">
				<h2 class="text-xl font-bold">Annonce sur <a class="link" href="https://www.kijiji.ca/v-vr-motorise/longueuil-rive-sud/skoolie-autobus-vr/1663218685">Kijiji</a></h2>
				<a href="/album/inside/"><Image loading="eager" class="my-4 rounded-lg" src={bus1} width={bus1.width/4} height={bus1.height/4} alt="Bus - intérieur" /></a>
				<a class="link" href="mailto:bus@waglo.com">bus@waglo.com</a>
			</div>
		</div>
	</main>
</Layout>
