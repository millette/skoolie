---
export interface Props {
	title: string
}

const { url, title } = Astro.props
const { origin } = Astro.site
const lang = Astro.url.pathname.startsWith("/en/") ? "en" : "fr"
const alternateLang = (Astro.url.pathname.startsWith("/en/") ? "fr" : "en") + "-ca"
const canonical = origin + url
let alternateUrl

switch (url) {
	case "/":
	alternateUrl = "/en/"
	break

	case "/en/":
	alternateUrl = "/"
	break

	default:
		throw new Error(`Missing url translation for "${url}"`)
}

alternateUrl = origin + alternateUrl
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<link rel="canonical" href={canonical}>
		<link rel="alternate" hreflang={alternateLang} href={alternateUrl}>
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">			
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container mx-auto p-4">
		  <slot />
		</div>
	</body>
</html>
